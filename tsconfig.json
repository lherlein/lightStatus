{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2020"],
      "target": "ES2020",
      "sourceMap": true,
      "strict": true,
      "outDir": "./bin",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }